{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7", 
      "ES2021.String"
    ],
    "paths": {
      "@settings/*": ["src/settings/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@apis/*": ["src/apis/*"],
      "@ui/*": ["src/ui/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts"
  ]
}